<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding"
    android:background="#FFFFFF"
    android:id="@+id/on_boarding">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="196dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/logo">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/line">
    </ImageView>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="294dp"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/img_1">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="434dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="41dp"
        android:gravity="center_horizontal|top"
        android:text="Pelaporan Kasus"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="491dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal|top"
        android:text="Dapat melaporkan permasalahan atau kasus apabila anda mengalami tindakan kriminal"
        android:textSize="16dp">

    </TextView>

    <Button
        android:id="@+id/lanjut3"
        android:layout_width="320in"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/img"
        android:paddingBottom="23dp"
        android:text="Lanjut"
        android:textSize="17dp">

    </Button>

</RelativeLayout>

